{
  "rewrites": [
    {
      "source": "/((?!api/.*|.*\\.(mp3|wav|ogg|jpg|jpeg|png|webp|svg|ico|css|js|json)).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/songs/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/**/*.mp3",
      "headers": [
        {
          "key": "Content-Type",
          "value": "audio/mpeg"
        },
        {
          "key": "Accept-Ranges",
          "value": "bytes"
        }
      ]
    }
  ]
}
